@model IEnumerable<ERP.Application.DTOs.CompanyDto>
@{
    ViewData["Title"] = "Wybór firmy";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Wybierz firmę</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-warning" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <p class="text-muted mb-4">Wybierz firmę, z którą chcesz pracować:</p>
                        
                        <div class="d-grid gap-3">
                            @foreach (var company in Model)
                            {
                                <form asp-action="Select" method="post" class="d-inline">
                                    <input type="hidden" name="companyId" value="@company.Id" />
                                    <button type="submit" 
                                            class="btn btn-outline-primary btn-lg text-start p-3 w-100 @(company.IsDefault ? "border-primary border-2" : "")">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@company.Name</strong>
                                                @if (company.IsDefault)
                                                {
                                                    <span class="badge bg-primary ms-2">Domyślna</span>
                                                }
                                            </div>
                                            <i class="bi bi-chevron-right"></i>
                                        </div>
                                        @if (!string.IsNullOrEmpty(company.City))
                                        {
                                            <small class="text-muted d-block mt-1">
                                                @company.City
                                                @if (!string.IsNullOrEmpty(company.PostalCode))
                                                {
                                                    <text>, @company.PostalCode</text>
                                                }
                                            </small>
                                        }
                                    </button>
                                </form>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <h5 class="alert-heading">Brak dostępnych firm</h5>
                            <p>Nie masz przypisanych żadnych firm. Skontaktuj się z administratorem systemu.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: all 0.2s ease;
    }
    
    .btn-outline-primary {
        transition: all 0.2s ease;
    }
</style>
