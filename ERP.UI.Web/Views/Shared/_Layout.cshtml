        var hideMenu = (ctrl == "Account" && act == "Login") || (ctrl == "Company" && act == "Select");
    }
    @if (!hideMenu)
    {
        <div class="app-menu-bar border-bottom flex-shrink-0">
            <div class="d-inline-flex p-2" style="gap: 3px;">
                <a href="/Main/Navigate/1" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 60px;">1. Oferty</a>
                <a href="/Main/Navigate/2" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 35px;">2</a>
                <a href="/Main/Navigate/3" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 35px;">3</a>
                <a href="/Main/Navigate/4" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 35px;">4</a>
                <a href="/Main/Navigate/5" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 35px;">5</a>
                <a href="/Main/Navigate/6" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 35px;">6</a>
                <a href="/Main/Navigate/7" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 35px;">7</a>
                <a href="/Main/Navigate/8" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 75px;">8. Dostawcy</a>
                <a href="/Main/Navigate/9" class="btn btn-outline-secondary btn-sm menu-btn" style="min-width: 75px;">9. Odbiorcy</a>
