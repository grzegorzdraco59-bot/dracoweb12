<Window x:Class="ERP.UI.WPF.Views.OfferPositionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edycja pozycji oferty" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Edycja pozycji oferty" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- ScrollViewer z formularzem -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Informacje o produkcie -->
                <GroupBox Header="Informacje o produkcie" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID towaru:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ProductId, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5" IsReadOnly="True"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="ID dostawcy:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SupplierId, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Kod produktu:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Nazwa PL:" Margin="0,5" VerticalAlignment="Center"/>
                        <Grid Grid.Row="3" Grid.Column="1" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="Wybierz" 
                                    Command="{Binding SelectProductCommand}"
                                    Padding="10,5" MinWidth="80"/>
                        </Grid>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Nazwa ENG:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding NameEng, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Ilość i jednostki -->
                <GroupBox Header="Ilość i jednostki" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ilość:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Jednostka:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Jednostka ENG:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding UnitEng, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Ceny -->
                <GroupBox Header="Ceny" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Cena:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Rabat (%):" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Cena po rabacie:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PriceAfterDiscount, Mode=OneWay}" 
                                 IsReadOnly="True" Margin="5" Padding="5" Background="#F0F0F0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="VAT (%):" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding VatRate, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="VAT kwota:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Vat, Mode=OneWay}" 
                                 IsReadOnly="True" Margin="5" Padding="5" Background="#F0F0F0"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Brutto:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding PriceBrutto, Mode=OneWay}" 
                                 IsReadOnly="True" Margin="5" Padding="5" Background="#F0F0F0"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Cena po rabacie:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding PriceAfterDiscount, Mode=OneWay}" 
                                 IsReadOnly="True" Margin="5" Padding="5" Background="#F0F0F0"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Cena po rabacie × ilość:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding PriceAfterDiscountAndQuantity, Mode=OneWay}" 
                                 IsReadOnly="True" Margin="5" Padding="5" Background="#F0F0F0"/>

                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Ilość × Cena:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding QuantityTimesPrice, Mode=OneWay}" 
                                 IsReadOnly="True" Margin="5" Padding="5" Background="#F0F0F0"/>
                    </Grid>
                </GroupBox>

                <!-- Uwagi -->
                <GroupBox Header="Uwagi" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Uwagi do oferty:" Margin="0,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding OfferNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="60" Padding="5" Margin="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Uwagi do faktury:" Margin="0,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding InvoiceNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="60" Padding="5" Margin="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Inne 1:" Margin="0,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Other1, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="60" Padding="5" Margin="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Nr zespołu:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding GroupNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zapisz" Command="{Binding SaveCommand}" 
                    Padding="20,5" Margin="0,0,10,0" MinWidth="100"/>
            <Button Content="Anuluj" Command="{Binding CancelCommand}" 
                    Padding="20,5" MinWidth="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
