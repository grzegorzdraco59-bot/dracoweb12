<Window x:Class="ERP.UI.WPF.Views.SendOfferEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wyślij ofertę" Height="480" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Do:" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" Text="{Binding To, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Text="DW/UDW (opcjonalnie):" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox Grid.Row="3" Text="{Binding DwUdw, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="4" Text="Temat:" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox Grid.Row="5" Text="{Binding Subject, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="6" Text="Treść:" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox Grid.Row="7" Text="{Binding Body, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,8"
                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MinHeight="80"/>

        <CheckBox Grid.Row="8" Content="Zmień status na 'wyslane' po wysłaniu" IsChecked="{Binding ChangeStatusAfterSend}" Margin="0,8,0,8"/>

        <TextBlock Grid.Row="9" Text="{Binding ValidationError}" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,8" Visibility="{Binding ValidationErrorVisibility}"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Wyślij" Command="{Binding SendCommand}" IsDefault="True" Padding="20,8" Margin="0,0,10,0" MinWidth="80"/>
            <Button Content="Anuluj" Command="{Binding CancelCommand}" IsCancel="True" Padding="20,8" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
