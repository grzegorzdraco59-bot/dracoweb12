<Window x:Class="ERP.UI.WPF.Views.InvoiceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ERP.UI.WPF.Views"
        mc:Ignorable="d"
        Title="Edycja faktury" Height="350" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Edycja faktury" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <GroupBox Header="Kontrahent" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Kontrahent:" Margin="0,5"/>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedKontrahentNazwa, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True"
                                 Margin="5" Padding="5"/>
                        <Button Grid.Column="1"
                                Content="Wybierz..."
                                Command="{Binding PickKontrahentCommand}"
                                Margin="5" Padding="10,4"/>
                    </Grid>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" Margin="0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OdbiorcaEmail, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Waluta:" Margin="0,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Waluta, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Zapisz" Command="{Binding SaveCommand}" Padding="16,5" Margin="0,0,8,0"/>
            <Button Content="Anuluj" Command="{Binding CancelCommand}" Padding="16,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
