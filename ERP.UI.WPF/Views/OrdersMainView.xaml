<UserControl x:Class="ERP.UI.WPF.Views.OrdersMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- 0: Nagłówek Zamówienia -->
            <RowDefinition Height="Auto"/>   <!-- 1: Pole wyszukiwania -->
            <RowDefinition Height="*"/>      <!-- 2: Browse Zamówień -->
            <RowDefinition Height="Auto"/>   <!-- 3: Przyciski edycji zamówień -->
            <RowDefinition Height="Auto"/>   <!-- 4: Nagłówek Pozycje Zamówienia -->
            <RowDefinition Height="*"/>      <!-- 5: Browse Pozycji Zamówienia -->
            <RowDefinition Height="Auto"/>   <!-- 6: Przyciski edycji pozycji -->
        </Grid.RowDefinitions>

        <!-- Nagłówek Zamówienia -->
        <Label Grid.Row="0" Content="Zamówienia" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

        <!-- Pole wyszukiwania -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
            <Label Content="Szukaj:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="300" 
                     Padding="5"
                     VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Browse Zamówień (górny) -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding FilteredOrders}"
                  SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Data" Binding="{Binding OrderDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="Nr zamówienia" Binding="{Binding OrderNumber}" Width="100"/>
                <DataGridTextColumn Header="ID Dostawcy" Binding="{Binding SupplierId}" Width="100"/>
                <DataGridTextColumn Header="Nazwa dostawcy" Binding="{Binding SupplierName}" Width="200"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Przyciski edycji zamówień -->
        <GroupBox Grid.Row="3" Header="Akcje - zamówienia" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Dodaj" 
                        Command="{Binding AddOrderCommand}"
                        Padding="10,5"
                        Margin="0,0,5,0"/>
                <Button Content="Edytuj" 
                        Command="{Binding EditOrderCommand}"
                        Padding="10,5"
                        Margin="0,0,5,0"/>
                <Button Content="Usuń" 
                        Command="{Binding DeleteOrderCommand}"
                        Padding="10,5"
                        Margin="0,0,5,0"/>
                <Button Content="Zmień status" 
                        Command="{Binding ChangeStatusCommand}"
                        Padding="10,5"
                        Margin="0,0,5,0"/>
                <Button Content="Odśwież" 
                        Command="{Binding LoadOrdersCommand}"
                        Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Nagłówek Pozycje Zamówienia -->
        <Label Grid.Row="4" Content="Pozycje zamówienia" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>

        <!-- Browse Pozycji Zamówienia (dolny) -->
        <DataGrid Grid.Row="5" 
                  ItemsSource="{Binding OrderPositions}"
                  SelectedItem="{Binding SelectedOrderPosition}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="ID Zamówienia" Binding="{Binding OrderId}" Width="100"/>
                <DataGridTextColumn Header="ID Towaru" Binding="{Binding ProductId}" Width="100"/>
                <DataGridTextColumn Header="Nazwa towaru" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="Ilość" Binding="{Binding Quantity, StringFormat='{}{0:N2}'}" Width="80"/>
                <DataGridTextColumn Header="Cena" Binding="{Binding Price, StringFormat='{}{0:N2}'}" Width="100"/>
                <DataGridTextColumn Header="Jednostka" Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Przyciski edycji pozycji -->
        <GroupBox Grid.Row="6" Header="Akcje - pozycje zamówienia" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Dodaj pozycję" 
                        Command="{Binding AddPositionCommand}"
                        Padding="10,5"
                        Margin="0,0,5,0"/>
                <Button Content="Edytuj pozycję" 
                        Command="{Binding EditPositionCommand}"
                        Padding="10,5"
                        Margin="0,0,5,0"/>
                <Button Content="Usuń pozycję" 
                        Command="{Binding DeletePositionCommand}"
                        Padding="10,5"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
