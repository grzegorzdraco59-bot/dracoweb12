<UserControl x:Class="ERP.UI.WPF.Views.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- 0: Nagłówek Kontrahenci -->
            <RowDefinition Height="Auto"/>   <!-- 1: Pole wyszukiwania -->
            <RowDefinition Height="*"/>      <!-- 2: Browse Kontrahenci -->
            <RowDefinition Height="Auto"/>   <!-- 3: Panel akcji -->
        </Grid.RowDefinitions>

        <!-- Nagłówek Kontrahenci -->
        <Label Grid.Row="0" Content="Kontrahenci" FontSize="16" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Left"/>

        <!-- Pole wyszukiwania -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Szukaj:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="300" 
                     Padding="5"
                     VerticalAlignment="Center">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Tag" Value="Wyszukaj po wszystkich kolumnach"/>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </StackPanel>

        <!-- Lista dostawców -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding FilteredSuppliers}"
                  SelectedItem="{Binding SelectedSupplier, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  ColumnHeaderStyle="{StaticResource FakturyOrangeColumnHeaderStyle}"
                  AlternationCount="2"
                  Margin="0,0,0,10">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowSelectionStyle}">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F2F2F2"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Waluta" Binding="{Binding Currency}" Width="60"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="150"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Notes}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Panel akcji -->
        <GroupBox Grid.Row="3" Header="Akcje - Kontrahenci" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="0" 
                         Text="{Binding NewSupplierName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,5,0"
                         Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="Nazwa kontrahenta"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBox Grid.Column="1" 
                         Text="{Binding NewSupplierEmail, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5,0,5,0"
                         Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="Email"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBox Grid.Column="2" 
                         Text="{Binding NewSupplierPhone, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5,0,5,0"
                         Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="Telefon"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="5,0,0,0">
                    <Button Content="Dodaj kontrahenta" 
                            Command="{Binding AddSupplierCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Edytuj kontrahenta" 
                            Command="{Binding EditSupplierCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Usuń kontrahenta" 
                            Command="{Binding DeleteSupplierCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Odśwież" 
                            Command="{Binding LoadSuppliersCommand}"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
