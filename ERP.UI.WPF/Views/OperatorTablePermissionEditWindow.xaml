<Window x:Class="ERP.UI.WPF.Views.OperatorTablePermissionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.UI.WPF.Converters"
        mc:Ignorable="d"
        Title="Edycja Uprawnień" Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Formularz -->
        <GroupBox Grid.Row="1" Header="Uprawnienia" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Operator:" Margin="0,5" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding OperatorName}" 
                          Margin="5" Padding="5" VerticalAlignment="Center" FontWeight="Bold"/>

                <Label Grid.Row="1" Grid.Column="0" Content="ID Operatora:" Margin="0,5" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding OperatorId}" 
                          Margin="5" Padding="5" VerticalAlignment="Center"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Nazwa tabeli:" Margin="0,5" VerticalAlignment="Center"/>
                <Grid Grid.Row="2" Grid.Column="1" Margin="5">
                    <ComboBox x:Name="TableNameComboBox"
                             ItemsSource="{Binding AvailableTables}"
                             Text="{Binding TableName, UpdateSourceTrigger=PropertyChanged}"
                             IsEditable="True"
                             Visibility="{Binding IsNew, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Padding="5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="{Binding TableName}" 
                             Visibility="{Binding IsNew, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                             Padding="5" VerticalAlignment="Center" FontWeight="Bold"/>
                </Grid>

                <Label Grid.Row="3" Grid.Column="0" Content="Uprawnienia:" Margin="0,10,0,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
                    <CheckBox Content="SELECT (odczyt)" IsChecked="{Binding CanSelect}" Margin="0,2"/>
                    <CheckBox Content="INSERT (dodawanie)" IsChecked="{Binding CanInsert}" Margin="0,2"/>
                    <CheckBox Content="UPDATE (modyfikacja)" IsChecked="{Binding CanUpdate}" Margin="0,2"/>
                    <CheckBox Content="DELETE (usuwanie)" IsChecked="{Binding CanDelete}" Margin="0,2"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zapisz" 
                    Command="{Binding SaveCommand}"
                    Padding="15,5"
                    Margin="0,0,5,0"
                    MinWidth="80"/>
            <Button Content="Anuluj" 
                    Command="{Binding CancelCommand}"
                    Padding="15,5"
                    MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
