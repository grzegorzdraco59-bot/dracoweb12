<Window x:Class="ERP.UI.WPF.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edycja towaru" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Edycja towaru" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- ScrollViewer z formularzem -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Informacje o towarze -->
                <GroupBox Header="Informacje o towarze" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Id}" 
                                 Margin="5" Padding="5" IsEnabled="False"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Grupa:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Group, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Nazwa PL:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NamePl, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Nazwa ENG:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NameEng, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Cena PLN:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding PricePln, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Jednostka sprzedaży:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Status:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zapisz" Command="{Binding SaveCommand}" 
                    Padding="20,5" Margin="0,0,10,0" MinWidth="100"/>
            <Button Content="Anuluj" Command="{Binding CancelCommand}" 
                    Padding="20,5" MinWidth="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
