<Window x:Class="ERP.UI.WPF.Views.ProductSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wybierz towar" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Wybierz towar" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Pole wyszukiwania -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Wyszukaj:" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="SearchTextBox" 
                     TextChanged="SearchTextBox_TextChanged"
                     Padding="5"/>
        </Grid>

        <!-- Lista produktów -->
        <DataGrid Grid.Row="2" 
                  x:Name="ProductsDataGrid"
                  ItemsSource="{Binding FilteredProducts}"
                  SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  SelectionChanged="ProductsDataGrid_SelectionChanged"
                  MouseDoubleClick="ProductsDataGrid_MouseDoubleClick"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Kontrahent" Binding="{Binding SupplierName}" Width="150"/>
                <DataGridTextColumn Header="Nazwa PL" Binding="{Binding NamePl}" Width="*"/>
                <DataGridTextColumn Header="Nazwa ENG" Binding="{Binding NameEng}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Przyciski -->
        <GroupBox Grid.Row="3" Header="Akcje" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Insert" x:Name="InsertButton" Click="InsertButton_Click" Padding="12,5" Margin="0,0,8,0"/>
                    <Button Content="Change" x:Name="ChangeButton" Click="ChangeButton_Click" Padding="12,5" Margin="0,0,8,0" IsEnabled="False"/>
                    <Button Content="Delete" x:Name="DeleteButton" Click="DeleteButton_Click" Padding="12,5" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Wybierz" x:Name="SelectButton"
                            Click="SelectButton_Click"
                            Padding="20,5" Margin="0,0,8,0" MinWidth="100" IsDefault="True"/>
                    <Button Content="Anuluj" Click="CancelButton_Click"
                            Padding="20,5" MinWidth="100" IsCancel="True"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
