<Window x:Class="ERP.UI.WPF.Views.OperatorCompanyEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OperatorFirma" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding InfoMessage}" FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,10"
                       Visibility="{Binding IsNew, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Informacje" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="ID Operatora:" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" Margin="5" Padding="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="ID Firmy:" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CompanyId, UpdateSourceTrigger=PropertyChanged}" Margin="5" Padding="5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="ID Roli:" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RoleIdText, UpdateSourceTrigger=PropertyChanged}" Margin="5" Padding="5"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zapisz" Command="{Binding SaveCommand}" Padding="15,5" Margin="0,0,5,0" MinWidth="80"/>
            <Button Content="Anuluj" Command="{Binding CancelCommand}" Padding="15,5" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
