<UserControl x:Class="ERP.UI.WPF.Views.OffersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ERP.UI.WPF.ViewModels"
             xmlns:conv="clr-namespace:ERP.UI.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <conv:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
        <!-- Jasnopomarańczowe tło nagłówka oferty (pastel, czytelne 8h) -->
        <SolidColorBrush x:Key="OfferHeaderBackground" Color="#FFF3E0"/>
        <!-- Wspólny styl badge dla flag FPF/ZLEC/FV: biały gdy false, zielony gdy true -->
        <Style x:Key="OfferFlagBadgeStyle" TargetType="Border">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TreeViewItem" x:Key="TreeViewItemStyle">
            <Setter Property="IsExpanded" Value="{Binding DataContext.IsExpanded, RelativeSource={RelativeSource Self}, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding DataContext.IsSelected, RelativeSource={RelativeSource Self}, Mode=TwoWay}"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MinWidth="480"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="2*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- ========== LEWY PANEL: lista ofert + pozycje oferty + przyciski ========== -->
        <Border Grid.Column="0" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="0,0,1,0" Padding="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="120"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="100"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Oferty" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <!-- Akcje na ofercie – identyczny styl jak w Fakturach -->
                <GroupBox Grid.Row="1" Header="Akcje na ofercie" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Content="Odśwież" Command="{Binding LoadOffersCommand}" Padding="10,5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Kopiuj do FPF" Command="{Binding CopyToFpfCommand}" Padding="10,5" MinWidth="90" Margin="0,0,5,0"/>
                            <Button Content="Kopiuj do FVZ" Command="{Binding CopyToFvzCommand}" Padding="10,5" MinWidth="90" Margin="0,0,5,0"/>
                            <Button Content="Kopiuj do FV" Command="{Binding CopyToFvCommand}" Padding="10,5" MinWidth="90" Margin="0,0,5,0"/>
                            <Button Content="Kopiuj do ZLEC" Command="{Binding CopyToOrderCommand}" Padding="10,5" MinWidth="90" Margin="0,0,5,0"/>
                            <Button Content="Drukuj PDF" Command="{Binding PrintOfferPdfCommand}" Padding="10,5" MinWidth="90" Margin="0,0,5,0"/>
                            <Button Content="Oferta mail" Command="{Binding SendEmailCommand}" Padding="10,5" MinWidth="90"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,6">
                    <Label Content="Szukaj:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" Padding="4" VerticalAlignment="Center"/>
                </StackPanel>
                <DataGrid x:Name="OffersDataGrid"
                          Grid.Row="3"
                          ItemsSource="{Binding FilteredOffers}"
                          SelectedItem="{Binding ActiveItem, Mode=TwoWay}"
                          SelectionUnit="FullRow"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          CanUserResizeRows="False"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="True"
                          ColumnHeaderStyle="{StaticResource FakturyOrangeColumnHeaderStyle}"
                          AlternationCount="2"
                          Margin="0,0,0,8">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowSelectionStyle}">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="#F2F2F2"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#0078D7"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataOferty, StringFormat='{}{0:yyyy-MM-dd}'}" Width="110" MinWidth="100" MaxWidth="130" CanUserResize="True"/>
                        <DataGridTemplateColumn Header="Nr" Width="50" MinWidth="40" MaxWidth="80" CanUserResize="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NrOferty}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               ToolTip="{Binding FullNo}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- FPF (do_proformy) -->
                        <DataGridTemplateColumn Header="FPF" Width="50" MinWidth="45" CanUserResize="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource OfferFlagBadgeStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForProforma}" Value="True">
                                                        <Setter Property="Background" Value="LightGreen"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="FPF" HorizontalAlignment="Center" FontSize="10" Foreground="#333"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- ZLEC (do_zlecenia) -->
                        <DataGridTemplateColumn Header="ZLEC" Width="50" MinWidth="45" CanUserResize="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource OfferFlagBadgeStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForOrder}" Value="True">
                                                        <Setter Property="Background" Value="LightGreen"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="ZLEC" HorizontalAlignment="Center" FontSize="10" Foreground="#333"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- FV (do_faktury) -->
                        <DataGridTemplateColumn Header="FV" Width="50" MinWidth="45" CanUserResize="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource OfferFlagBadgeStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ForInvoice}" Value="True">
                                                        <Setter Property="Background" Value="LightGreen"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="FV" HorizontalAlignment="Center" FontSize="10" Foreground="#333"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" CanUserResize="True"/>
                        <DataGridTextColumn Header="Klient" Binding="{Binding CustomerName}" Width="*" CanUserResize="True"/>
                        <DataGridTextColumn Header="Państwo" Binding="{Binding CustomerCountry}" Width="90" MinWidth="80" MaxWidth="100" CanUserResize="True"/>
                        <DataGridTextColumn Header="Adres" Binding="{Binding Adres}" Width="*" MinWidth="120" CanUserResize="True"/>
                        <DataGridTextColumn Header="Waluta" Binding="{Binding Currency}" Width="70" MinWidth="60" MaxWidth="80" CanUserResize="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Brutto" Binding="{Binding SumBrutto, StringFormat='{}{0:N2}', TargetNullValue='0,00'}" Width="120" CanUserResize="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource FakturyOrangeColumnHeaderStyle}">
                                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <Button Content="Nowa" Command="{Binding AddOfferCommand}" Padding="10,5" Margin="0,0,6,0"/>
                    <Button Content="Edytuj" Command="{Binding EditOfferCommand}" Padding="10,5" Margin="0,0,6,0"/>
                    <Button Content="Usuń" Command="{Binding DeleteOfferCommand}" Padding="10,5"/>
                </StackPanel>

                <!-- Pozycje oferty – pod listą ofert (lewa kolumna) -->
                <GroupBox Grid.Row="5" Header="Pozycje oferty" Padding="6" Margin="0,8,0,8" IsEnabled="{Binding HasSelectedOffer}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding OfferPositions}"
                                  SelectedItem="{Binding SelectedOfferPosition, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  CanUserResizeRows="False"
                                  ColumnHeaderStyle="{StaticResource FakturyOrangeColumnHeaderStyle}"
                                  AlternationCount="2"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowSelectionStyle}">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="#F2F2F2"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#0078D7"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Towar/Usługa" Binding="{Binding Name}" Width="*" MinWidth="120"/>
                                <DataGridTextColumn Header="Ilość" Binding="{Binding Ilosc, StringFormat='{}{0:N2}'}" Width="70"/>
                                <DataGridTextColumn Header="Cena netto" Binding="{Binding CenaNetto, StringFormat='{}{0:N2}'}" Width="85"/>
                                <DataGridTextColumn Header="Rabat %" Binding="{Binding Discount, StringFormat='{}{0:N1}'}" Width="60"/>
                                <DataGridTextColumn Header="Stawka VAT" Binding="{Binding VatRate}" Width="70"/>
                                <DataGridTextColumn Header="Brutto" Binding="{Binding BruttoPoz, StringFormat='{}{0:N2}'}" Width="80" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                            <Button Content="Dodaj pozycję" Command="{Binding AddPositionCommand}" Padding="8,4" Margin="0,0,6,0"/>
                            <Button Content="Edytuj pozycję" Command="{Binding EditPositionCommand}" Padding="8,4" Margin="0,0,6,0"/>
                            <Button Content="Usuń pozycję" Command="{Binding DeletePositionCommand}" Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"/>

        <!-- ========== PRAWY PANEL: nagłówek + drzewko + uwagi do pozycji ========== -->
        <Grid Grid.Column="2" IsEnabled="{Binding HasSelectedOffer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="120"/>
                <RowDefinition Height="150" MinHeight="120"/>
            </Grid.RowDefinitions>

            <!-- ROW 0: nagłówek wybranej oferty – jasnopomarańczowe tło, suma brutto z modelu (sum_brutto) -->
            <GroupBox Grid.Row="0" Header="Nagłówek oferty" Padding="0" Margin="0,0,0,8">
                <Border Background="{StaticResource OfferHeaderBackground}" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel Margin="0,0,0,4">
                            <TextBlock Text="Numer:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.NrOferty, FallbackValue='—'}" ToolTip="{Binding SelectedOffer.FullNo}" Foreground="#333" Margin="0,0,16,0"/>
                            <CheckBox Content="do FPF" IsChecked="{Binding SelectedOffer.ForProforma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,0,0" VerticalAlignment="Center" Checked="OfferFlag_Changed" Unchecked="OfferFlag_Changed"/>
                            <CheckBox Content="do zlecenia" IsChecked="{Binding SelectedOffer.ForOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,0,0" VerticalAlignment="Center" Checked="OfferFlag_Changed" Unchecked="OfferFlag_Changed"/>
                            <CheckBox Content="do FV" IsChecked="{Binding SelectedOffer.ForInvoice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,0,0" VerticalAlignment="Center" Checked="OfferFlag_Changed" Unchecked="OfferFlag_Changed"/>
                            <TextBlock Text="Status:" FontWeight="SemiBold" Foreground="#333" Width="50" Margin="12,0,4,0" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding OfferStatuses}" SelectedItem="{Binding SelectedOffer.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      MinWidth="100" Margin="0,0,16,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.FormattedOfferDateYyyyMmDd, FallbackValue='—'}" Foreground="#333" Margin="0,0,16,0"/>
                            <TextBlock Text="Waluta:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.Currency, FallbackValue='—'}" Foreground="#333"/>
                        </WrapPanel>
                        <WrapPanel Margin="0,0,0,4">
                            <TextBlock Text="Klient:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0" VerticalAlignment="Top"/>
                            <TextBlock Text="{Binding SelectedOffer.CustomerName, FallbackValue='—'}" Foreground="#333" TextWrapping="Wrap" MaxWidth="400"/>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Suma netto:" FontWeight="SemiBold" Foreground="#333" Width="90" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.TotalPrice, StringFormat='{}{0:N2}', FallbackValue='0,00', TargetNullValue='0,00'}" Foreground="#333" Margin="0,0,20,0"/>
                            <TextBlock Text="Suma VAT:" FontWeight="SemiBold" Foreground="#333" Width="90" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.TotalVat, StringFormat='{}{0:N2}', FallbackValue='0,00', TargetNullValue='0,00'}" Foreground="#333" Margin="0,0,20,0"/>
                            <TextBlock Text="Suma brutto:" FontWeight="Bold" FontSize="14" Foreground="#333" Width="100" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.SumBrutto, StringFormat='{}{0:N2}', FallbackValue='0,00', TargetNullValue='0,00'}"
                                       FontWeight="Bold" FontSize="14" Foreground="#333" HorizontalAlignment="Right" MinWidth="90"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </GroupBox>

            <!-- ROW 1: drzewko dokumentów -->
            <GroupBox Grid.Row="1" Header="Drzewko dokumentów (Oferta → FPF → FVZ / FV)" Padding="6" Margin="0,0,0,8">
                <TreeView x:Name="DocumentTreeView"
                          ItemsSource="{Binding DocumentTreeItems}"
                          MinHeight="120"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ItemContainerStyle="{StaticResource TreeViewItemStyle}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type vm:DocumentTreeNode}" ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding DisplayText}" FontFamily="Consolas" FontSize="12"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>

            <!-- ROW 2: Uwagi do pozycji oferty -->
            <GroupBox Grid.Row="2" Header="Uwagi do pozycji oferty" Padding="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <TextBox Text="{Binding SelectedOfferPosition.OfferNotes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue='', FallbackValue=''}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="100"
                             IsEnabled="{Binding HasSelectedOfferPosition}"
                             Padding="4"/>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <Border Grid.Column="2" Background="#F5F5F5" CornerRadius="4" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center"
                Visibility="{Binding HasSelectedOffer, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
            <TextBlock Text="Wybierz ofertę z listy po lewej, aby zobaczyć nagłówek i drzewko dokumentów."
                       TextWrapping="Wrap" TextAlignment="Center" Foreground="Gray" MaxWidth="320"/>
        </Border>
    </Grid>
</UserControl>
