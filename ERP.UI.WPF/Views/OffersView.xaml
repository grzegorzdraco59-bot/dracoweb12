<UserControl x:Class="ERP.UI.WPF.Views.OffersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ERP.UI.WPF.ViewModels"
             xmlns:conv="clr-namespace:ERP.UI.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <conv:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
        <!-- Jasnopomarańczowe tło nagłówka oferty (pastel, czytelne 8h) -->
        <SolidColorBrush x:Key="OfferHeaderBackground" Color="#FFF3E0"/>
        <!-- Nagłówki kolumn DataGrid: jasnopomarańczowe tło, pogrubiona czcionka, delikatna linia -->
        <Style x:Key="OrangeDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource OfferHeaderBackground}"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#E0D0C0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <Style TargetType="TreeViewItem" x:Key="TreeViewItemStyle">
            <Setter Property="IsExpanded" Value="{Binding DataContext.IsExpanded, RelativeSource={RelativeSource Self}, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding DataContext.IsSelected, RelativeSource={RelativeSource Self}, Mode=TwoWay}"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="420" MaxWidth="520"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="3*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- ========== LEWY PANEL: lista ofert + przyciski pod listą ========== -->
        <Border Grid.Column="0" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="0,0,1,0" Padding="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Oferty" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6">
                    <Label Content="Szukaj:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" Padding="4" VerticalAlignment="Center"/>
                </StackPanel>
                <DataGrid Grid.Row="2"
                          ItemsSource="{Binding FilteredOffers}"
                          SelectedItem="{Binding SelectedOffer}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          CanUserResizeRows="False"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="True"
                          ColumnHeaderStyle="{StaticResource OrangeDataGridColumnHeaderStyle}"
                          Margin="0,0,0,8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataOferty, StringFormat='{}{0:yyyy-MM-dd}'}" Width="110" MinWidth="100" MaxWidth="130" CanUserResize="True"/>
                        <DataGridTemplateColumn Header="Nr" Width="50" MinWidth="40" MaxWidth="80" CanUserResize="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NrOferty}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               ToolTip="{Binding FullNo}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Klient" Binding="{Binding CustomerName}" Width="*" CanUserResize="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" CanUserResize="True"/>
                        <DataGridTextColumn Header="Brutto" Binding="{Binding SumBrutto, StringFormat='{}{0:N2}', TargetNullValue='0,00'}" Width="120" CanUserResize="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource OrangeDataGridColumnHeaderStyle}">
                                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <Button Content="Nowa" Command="{Binding AddOfferCommand}" Padding="10,5" Margin="0,0,6,0"/>
                    <Button Content="Edytuj" Command="{Binding EditOfferCommand}" Padding="10,5" Margin="0,0,6,0"/>
                    <Button Content="Usuń" Command="{Binding DeleteOfferCommand}" Padding="10,5" Margin="0,0,6,0"/>
                    <Button Content="Kopiuj do FPF" Command="{Binding CopyToFpfCommand}" Padding="10,5" Margin="0,0,6,0"/>
                    <Button Content="Drukuj" Command="{Binding PrintOfferPlCommand}" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"/>

        <!-- ========== PRAWY PANEL: nagłówek + pozycje + drzewko ========== -->
        <Grid Grid.Column="2" IsEnabled="{Binding HasSelectedOffer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="120"/>
            </Grid.RowDefinitions>

            <!-- PRAWY GÓRNY: nagłówek wybranej oferty – jasnopomarańczowe tło, suma brutto z modelu (sum_brutto) -->
            <GroupBox Grid.Row="0" Header="Nagłówek oferty" Padding="0" Margin="0,0,0,8">
                <Border Background="{StaticResource OfferHeaderBackground}" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel Margin="0,0,0,4">
                            <TextBlock Text="Numer:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.NrOferty, FallbackValue='—'}" ToolTip="{Binding SelectedOffer.FullNo}" Foreground="#333" Margin="0,0,16,0"/>
                            <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.FormattedOfferDateYyyyMmDd, FallbackValue='—'}" Foreground="#333" Margin="0,0,16,0"/>
                            <TextBlock Text="Status:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.Status, FallbackValue='—'}" Foreground="#333" Margin="0,0,16,0"/>
                            <TextBlock Text="Waluta:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.Currency, FallbackValue='—'}" Foreground="#333"/>
                        </WrapPanel>
                        <WrapPanel Margin="0,0,0,4">
                            <TextBlock Text="Klient:" FontWeight="SemiBold" Foreground="#333" Width="80" Margin="0,0,4,0" VerticalAlignment="Top"/>
                            <TextBlock Text="{Binding SelectedOffer.CustomerName, FallbackValue='—'}" Foreground="#333" TextWrapping="Wrap" MaxWidth="400"/>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Suma netto:" FontWeight="SemiBold" Foreground="#333" Width="90" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.TotalPrice, StringFormat='{}{0:N2}', FallbackValue='0,00', TargetNullValue='0,00'}" Foreground="#333" Margin="0,0,20,0"/>
                            <TextBlock Text="Suma VAT:" FontWeight="SemiBold" Foreground="#333" Width="90" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.TotalVat, StringFormat='{}{0:N2}', FallbackValue='0,00', TargetNullValue='0,00'}" Foreground="#333" Margin="0,0,20,0"/>
                            <TextBlock Text="Suma brutto:" FontWeight="Bold" FontSize="14" Foreground="#333" Width="100" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedOffer.SumBrutto, StringFormat='{}{0:N2}', FallbackValue='0,00', TargetNullValue='0,00'}"
                                       FontWeight="Bold" FontSize="14" Foreground="#333" HorizontalAlignment="Right" MinWidth="90"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Opacity="0.9">
                            <Button Content="Zmień status" Command="{Binding ChangeStatusCommand}" Padding="8,4" Margin="0,0,6,0" FontSize="11"/>
                            <Button Content="Utwórz zamówienie" Command="{Binding CreateOrderFromOfferCommand}" Padding="8,4" Margin="0,0,6,0" FontSize="11"/>
                            <Button Content="Odśwież" Command="{Binding LoadOffersCommand}" Padding="8,4" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </GroupBox>

            <!-- PRAWY DOLNY: pozycje oferty | drzewko dokumentów (splitter, drzewko MinWidth 280–360) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*" MinWidth="280"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Pozycje oferty" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding OfferPositions}"
                                  SelectedItem="{Binding SelectedOfferPosition}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  CanUserResizeRows="False"
                                  ColumnHeaderStyle="{StaticResource OrangeDataGridColumnHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Towar/Usługa" Binding="{Binding Name}" Width="*" MinWidth="120"/>
                                <DataGridTextColumn Header="Ilość" Binding="{Binding Ilosc, StringFormat='{}{0:N2}'}" Width="70"/>
                                <DataGridTextColumn Header="Cena netto" Binding="{Binding CenaNetto, StringFormat='{}{0:N2}'}" Width="85"/>
                                <DataGridTextColumn Header="Rabat %" Binding="{Binding Discount, StringFormat='{}{0:N1}'}" Width="60"/>
                                <DataGridTextColumn Header="Stawka VAT" Binding="{Binding VatRate}" Width="70"/>
                                <DataGridTextColumn Header="Brutto" Binding="{Binding BruttoPoz, StringFormat='{}{0:N2}'}" Width="80" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                            <Button Content="Dodaj pozycję" Command="{Binding AddPositionCommand}" Padding="8,4" Margin="0,0,6,0"/>
                            <Button Content="Edytuj pozycję" Command="{Binding EditPositionCommand}" Padding="8,4" Margin="0,0,6,0"/>
                            <Button Content="Usuń pozycję" Command="{Binding DeletePositionCommand}" Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"/>

                <GroupBox Grid.Column="2" Header="Drzewko dokumentów (Oferta → FPF → FVZ / FV)" Padding="6">
                    <TreeView x:Name="DocumentTreeView"
                              ItemsSource="{Binding DocumentTreeItems}"
                              MinHeight="100"
                              ItemContainerStyle="{StaticResource TreeViewItemStyle}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type vm:DocumentTreeNode}" ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding DisplayText}" FontFamily="Consolas" FontSize="12"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </GroupBox>
            </Grid>
        </Grid>

        <Border Grid.Column="2" Background="#F5F5F5" CornerRadius="4" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center"
                Visibility="{Binding HasSelectedOffer, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
            <TextBlock Text="Wybierz ofertę z listy po lewej, aby zobaczyć nagłówek, pozycje i drzewko dokumentów."
                       TextWrapping="Wrap" TextAlignment="Center" Foreground="Gray" MaxWidth="320"/>
        </Border>
    </Grid>
</UserControl>
