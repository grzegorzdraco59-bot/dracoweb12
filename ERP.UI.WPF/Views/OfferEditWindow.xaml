<Window x:Class="ERP.UI.WPF.Views.OfferEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ERP.UI.WPF.Views"
        mc:Ignorable="d"
        Title="Edycja oferty" Height="900" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FocusManager.FocusedElement="{Binding ElementName=OfferNumberBox}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Edycja oferty" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- ScrollViewer z formularzem -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Informacje o ofercie -->
                <GroupBox Header="Informacje o ofercie" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nr oferty:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox x:Name="OfferNumberBox" Grid.Row="0" Grid.Column="1" Text="{Binding OfferNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <CheckBox Content="do FPF" IsChecked="{Binding ForProforma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,16,0" VerticalAlignment="Center"/>
                            <CheckBox Content="do zlecenia" IsChecked="{Binding ForOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,16,0" VerticalAlignment="Center"/>
                            <CheckBox Content="do FV" IsChecked="{Binding ForInvoice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,16,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Status:" Margin="16,0,6,0" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding OfferStatuses}" SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      MinWidth="120" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Data (dd/MM/yyyy):" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding FormattedOfferDate, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="ID Klienta:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CustomerId, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Waluta:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Currency, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Operator:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Operator, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Dane klienta -->
                <GroupBox Header="Dane klienta" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Kontrahent nazwa:" Margin="0,5" VerticalAlignment="Center"/>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding SelectedKontrahentNazwa, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True"
                                     Margin="5" Padding="5"/>
                            <Button Grid.Column="1"
                                    Content="Wybierz..."
                                    Command="{Binding PickKontrahentCommand}"
                                    Margin="5" Padding="10,4"/>
                        </Grid>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ulica i nr:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CustomerStreet, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Kod pocztowy:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CustomerPostalCode, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Miasto:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CustomerCity, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Państwo:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CustomerCountry, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="NIP:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CustomerNip, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Email:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CustomerEmail, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Ceny -->
                <GroupBox Header="Ceny" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Cena całkowita:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TotalPrice, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Stawka VAT:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding VatRate, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="VAT całkowity:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TotalVat, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Brutto:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding TotalBrutto, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Uwagi -->
                <GroupBox Header="Uwagi" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Uwagi do oferty:" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Text="{Binding OfferNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="80" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Uwagi handlowe -->
                <GroupBox Header="Uwagi handlowe" Margin="0,0,0,10" Padding="10">
                    <TextBox Text="{Binding TradeNotes, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" 
                             MinHeight="60" Padding="5"/>
                </GroupBox>

                <!-- Dane dodatkowe -->
                <GroupBox Header="Dane dodatkowe" Margin="0,0,0,10" Padding="10">
                    <TextBox Text="{Binding AdditionalData, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" 
                             MinHeight="60" Padding="5"/>
                </GroupBox>

                <!-- Historia -->
                <GroupBox Header="Historia" Margin="0,0,0,10" Padding="10">
                    <TextBox Text="{Binding History, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" 
                             MinHeight="60" Padding="5"/>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zapisz" Command="{Binding SaveCommand}" 
                    Padding="20,5" Margin="0,0,10,0" MinWidth="100"/>
            <Button Content="Anuluj" Command="{Binding CancelCommand}" 
                    Padding="20,5" MinWidth="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
