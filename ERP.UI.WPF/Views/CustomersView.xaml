<UserControl x:Class="ERP.UI.WPF.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Lista klientów -->
        <DataGrid Grid.Row="0" 
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email1}" Width="200"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Phone1}" Width="150"/>
                <DataGridTextColumn Header="Miasto" Binding="{Binding City}" Width="150"/>
                <DataGridTextColumn Header="NIP" Binding="{Binding Nip}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Panel dodawania nowego odbiorcy -->
        <GroupBox Grid.Row="1" Header="Dodaj nowego odbiorcę" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="0" 
                         Text="{Binding NewCustomerName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,5,0"
                         Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="Nazwa odbiorcy"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBox Grid.Column="1" 
                         Text="{Binding NewCustomerEmail, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5,0,5,0"
                         Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="Email"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBox Grid.Column="2" 
                         Text="{Binding NewCustomerPhone, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5,0,5,0"
                         Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Tag" Value="Telefon"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="5,0,0,0">
                    <Button Content="Dodaj" 
                            Command="{Binding AddCustomerCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Edytuj" 
                            Command="{Binding EditCustomerCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Odśwież" 
                            Command="{Binding LoadCustomersCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Usuń" 
                            Command="{Binding DeleteCustomerCommand}"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
