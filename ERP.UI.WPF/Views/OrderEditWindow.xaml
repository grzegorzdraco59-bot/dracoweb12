<Window x:Class="ERP.UI.WPF.Views.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="800" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="{Binding HeaderText}" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- ScrollViewer z formularzem -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Informacje podstawowe -->
                <GroupBox Header="Informacje podstawowe" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID zamówienia:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding OrderNumberInt, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Data zamówienia:" Margin="0,5" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding OrderDate, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" Margin="0,5" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" SelectedValue="{Binding Status, UpdateSourceTrigger=PropertyChanged}" 
                                  SelectedValuePath="Tag" Margin="5" Padding="5">
                            <ComboBoxItem Content="1 - Wybrane do zamówień" Tag="1"/>
                            <ComboBoxItem Content="2 - Zamówienia edytowane" Tag="2"/>
                            <ComboBoxItem Content="3 - Oczekiwanie na dostawę" Tag="3"/>
                            <ComboBoxItem Content="4 - Dostarczone" Tag="4"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- Informacje o dostawcy -->
                <GroupBox Header="Dostawca" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID dostawcy:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SupplierId, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Nazwa dostawcy:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SupplierName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Informacje o produkcie -->
                <GroupBox Header="Produkt" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID towaru:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ProductId, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5" IsReadOnly="True"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Nazwa towaru (Draco):" Margin="0,5" VerticalAlignment="Center"/>
                        <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding ProductNameDraco, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="Wybierz" 
                                    Command="{Binding SelectProductCommand}"
                                    Padding="10,5" MinWidth="80"/>
                        </Grid>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Nazwa towaru:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Jednostki i ceny -->
                <GroupBox Header="Jednostki i ceny" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Jednostki zakupu:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PurchaseUnit, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Jednostki sprzedaży:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SalesUnit, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ilość:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Ilość w opakowaniu:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding QuantityInPackage, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>
                    </Grid>
                </GroupBox>

                <!-- Statusy i dodatkowe informacje -->
                <GroupBox Header="Statusy i dodatkowe informacje" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Operator:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Operator, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Nr zamówienia skaner:" Margin="0,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ScannerOrderNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="5" Padding="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Uwagi:" Margin="0,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="60" Padding="5" Margin="5"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Zapisz" Command="{Binding SaveCommand}" 
                    Padding="20,5" Margin="0,0,10,0" MinWidth="100"/>
            <Button Content="Anuluj" Command="{Binding CancelCommand}" 
                    Padding="20,5" MinWidth="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
