<UserControl x:Class="ERP.UI.WPF.Views.KontrahenciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:ERP.UI.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVis"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Kontrahenci" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="SearchTextBox"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Width="260" Padding="5" VerticalAlignment="Center"/>
            <Button Content="Odśwież" Command="{Binding LoadCommand}" Margin="10,0,0,0" Padding="10,4"/>
        </StackPanel>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredKontrahenci}"
                  SelectedItem="{Binding SelectedKontrahent, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  ColumnHeaderStyle="{StaticResource FakturyOrangeColumnHeaderStyle}"
                  AlternationCount="2"
                  MouseDoubleClick="KontrahenciGrid_MouseDoubleClick">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowSelectionStyle}">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F2F2F2"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="60"/>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="140"/>
                <DataGridTextColumn Header="Miasto" Binding="{Binding Miasto}" Width="140"/>
                <DataGridTextColumn Header="Waluta" Binding="{Binding Waluta}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="3" Header="Akcje kontrahenci" Padding="10" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Visibility="{Binding IsSelectionMode, Converter={StaticResource InvertedBoolToVis}}">
                    <Button Content="Dodaj" Command="{Binding AddCommand}" Padding="12,4" Margin="0,0,6,0"/>
                    <Button Content="Edytuj" Command="{Binding EditCommand}" Padding="12,4" Margin="0,0,6,0"/>
                    <Button Content="Usuń" Command="{Binding DeleteCommand}" Padding="12,4" Margin="0,0,6,0"/>
                    <Button Content="Zamknij" Command="{Binding CloseCommand}" Padding="12,4"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="{Binding IsSelectionMode, Converter={StaticResource BoolToVis}}">
                    <Button Content="Wybierz" Command="{Binding SelectCommand}" Padding="12,4" Margin="0,0,6,0"/>
                    <Button Content="Anuluj" Command="{Binding CloseCommand}" Padding="12,4"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
