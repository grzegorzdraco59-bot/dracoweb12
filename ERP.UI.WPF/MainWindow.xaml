<Window x:Class="ERP.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.UI.WPF"
        mc:Ignorable="d"
        Title="ERP System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Pasek z 23 przyciskami na górze -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Margin="5,3">
                    <Button Content="1. Oferty" Command="{Binding NavigateCommand}" CommandParameter="1" Padding="6,3" Margin="0,0,3,0" MinWidth="60" FontSize="11"/>
                    <Button Content="2" Command="{Binding NavigateCommand}" CommandParameter="2" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="3" Command="{Binding NavigateCommand}" CommandParameter="3" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="4" Command="{Binding NavigateCommand}" CommandParameter="4" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="5. Faktury" Command="{Binding NavigateCommand}" CommandParameter="5" Padding="6,3" Margin="0,0,3,0" MinWidth="85" FontSize="11"/>
                    <Button Content="6" Command="{Binding NavigateCommand}" CommandParameter="6" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="7" Command="{Binding NavigateCommand}" CommandParameter="7" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="8. Dostawcy" Command="{Binding NavigateCommand}" CommandParameter="8" Padding="6,3" Margin="0,0,3,0" MinWidth="75" FontSize="11"/>
                    <Button Content="9. Odbiorcy" Command="{Binding NavigateCommand}" CommandParameter="9" Padding="6,3" Margin="0,0,3,0" MinWidth="75" FontSize="11"/>
                    <Button Content="10. Towary" Command="{Binding NavigateCommand}" CommandParameter="10" Padding="6,3" Margin="0,0,3,0" MinWidth="70" FontSize="11"/>
                    <Button Content="11. Zamówienia" Command="{Binding NavigateCommand}" CommandParameter="11" Padding="6,3" Margin="0,0,3,0" MinWidth="100" FontSize="11"/>
                    <Button Content="12. OperatorFirma" Command="{Binding NavigateCommand}" CommandParameter="12" Padding="6,3" Margin="0,0,3,0" MinWidth="120" FontSize="11"/>
                    <Button Content="13. zamowienia hala" Command="{Binding NavigateCommand}" CommandParameter="13" Padding="6,3" Margin="0,0,3,0" MinWidth="120" FontSize="11"/>
                    <Button Content="14" Command="{Binding NavigateCommand}" CommandParameter="14" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="15" Command="{Binding NavigateCommand}" CommandParameter="15" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="16" Command="{Binding NavigateCommand}" CommandParameter="16" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="17" Command="{Binding NavigateCommand}" CommandParameter="17" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="18" Command="{Binding NavigateCommand}" CommandParameter="18" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="19" Command="{Binding NavigateCommand}" CommandParameter="19" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="20" Command="{Binding NavigateCommand}" CommandParameter="20" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="21" Command="{Binding NavigateCommand}" CommandParameter="21" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="22" Command="{Binding NavigateCommand}" CommandParameter="22" Padding="6,3" Margin="0,0,3,0" MinWidth="35" FontSize="11"/>
                    <Button Content="23. Admin" Command="{Binding NavigateCommand}" CommandParameter="23" Padding="6,3" Margin="0,0,3,0" MinWidth="70" FontSize="11"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Główny obszar z widokami -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
